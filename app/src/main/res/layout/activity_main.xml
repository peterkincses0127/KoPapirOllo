<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:configChanges="orientation"
    android:screenOrientation="portrait">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp">


        <ImageView
            android:id="@+id/EmberImage"
            android:layout_width="175dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/rock" />

        <TextView
            android:id="@+id/DontetlenTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Döntetlenek száma:"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/textViewTeValasztas"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text="A te választásod"
            android:textAlignment="center"
            android:textSize="30dp"

            />


        <ImageView
            android:id="@+id/GepImage"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/rock" />

        <TextView
            android:id="@+id/textViewGepValasztas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gép választása"
            android:textAlignment="center"
            android:textSize="30dp"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

<!--            <Button-->
<!--                android:id="@+id/buttonKo"-->
<!--                android:layout_width="148dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="Kő" />-->

<!--            <Button-->
<!--                android:id="@+id/buttonPapir"-->
<!--                android:layout_width="137dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="Papír" />-->

<!--            <Button-->
<!--                android:id="@+id/buttonOllo"-->
<!--                android:layout_width="137dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="Olló" />-->


            <ImageView
                android:id="@+id/buttonKo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/rock" />

            <ImageView
                android:id="@+id/buttonPapir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/paper" />

            <ImageView
                android:id="@+id/buttonOllo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/scissors" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewGepHp1"
                    android:layout_width="346dp"
                    android:layout_height="23dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/heart2" />

                <ImageView
                    android:id="@+id/imageViewGepHp2"
                    android:layout_width="346dp"
                    android:layout_height="23dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/heart2" />

